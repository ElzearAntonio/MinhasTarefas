<TarefasScreen>:
    FloatLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: 'Minhas Tarefas'
            halign: 'center'
            elevation: 5
            pos_hint: {'top': 1}
            left_action_items: [['arrow-left', lambda x: root.voltar_tela()]]
            right_action_items: [['trash-can', lambda x: root.deletar_tarefas()]]
            md_bg_color: 1,1,1,1
            specific_text_color: 0,0,0,1

        ScrollView:
            size_hint_y: 0.82
            pos_hint: {'center_x': 0.5, 'y': 0.1}  # muda o 'y' para subir/descer
            MDList:
                id: lista_tarefas

        Image:
            source: 'clipboard.png'
            size_hint: (0.05, 0.05)
            pos: 1820, 925

    MDBoxLayout:
        orientation: 'vertical'
        MDTextField:
            id: addtarefa
            font_size: 20
            hint_text: 'Tarefa :'
            pos_hint: {'center_x': 0.45, 'center_y': 0.05}
            size_hint_x: 0.8
            icon_left: 'book'

        MDTextField:
            id: prioridade_tarefa
            hint_text: 'Prioridade (ex: Alta)'
            pos_hint: {'center_x': 0.75, 'center_y': 0.05}
            size_hint_x: 0.2

    MDRaisedButton:
        text: 'Registrar'
        text_color: 0,0,0,1
        font_size: 15
        elevation: 5
        bold: True
        pos_hint: {'center_x': 0.9, 'center_y': 0.05}
        size_hint_x: 0.1
        md_bg_color: 1,1,1,1
        on_release: root.adicionar_tarefas()
