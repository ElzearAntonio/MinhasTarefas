<LoginScreen>

    MDTopAppBar:
        elevation: 5
        pos_hint: {'top': 1}
        left_action_items: [['arrow-left', lambda x: root.callback()]]
        md_bg_color: 0,0,0,1

    Image:
        source:'clipboard.png'
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}

    MDTextField:
        hint_text: 'Tarefa :'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        size_hint_x: 0.8
        icon_left: 'book'

    MDRaisedButton:
        text: 'Registrar'
        font_size: 15
        elevation: 5
        bold: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        md_bg_color: 0,0,0,1
