<LoginScreen>
    MDTopAppBar:
        title: 'Login'
        halign: 'center'
        elevation: 5
        pos_hint: {'top': 1}
        left_action_items: [['arrow-left', lambda x: app.stop()]]
        md_bg_color: 1,1,1,1
        specific_text_color: 0,0,0,1

    Image:
        source:'Login.png'
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}

    MDTextField:
        id: usuario
        hint_text: 'Usuario :'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_x: 0.8
        icon_left: 'email'


    MDTextField:
        id: senha
        hint_text: 'Senha :'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        size_hint_x: 0.8
        icon_left: 'key'
        password: True

    MDTextField:
        id: confirmar_senha
        hint_text: ' Confirmar Senha :'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint_x: 0.8
        icon_left: 'key'
        password: True


    MDRaisedButton:
        text: 'Entrar'
        font_size: 15
        elevation: 5
        bold: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        md_bg_color: 1,1,1,1
        text_color: 0,0,0,1
        on_press: root.ir_para_tela_tarefas()
